<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/textColorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.Spinner</item>
    </style>

    <style name="EditTextLabel">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/colorPrimaryDark</item>
        <item name="background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.CenterLoginTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:shadowRadius">10</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="AppTheme.ButtonStyle.LoginButtonStyle">
        <item name="android:background">@drawable/bg_button_login</item>
    </style>


    <style name="AppTheme.DefaultActivityPadding">
        <item name="android:paddingBottom">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
    </style>

    <style name="AppTheme.PaddingWithoutTop">
        <item name="android:paddingBottom">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="AppTheme.PaddingWithoutBottom">
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.DefaultActivityPadding.Login">
        <item name="android:background">@drawable/background</item>
    </style>


    <style name="AppTheme.LoginActivityTheme">
        <item name="android:background">@drawable/background</item>
        <!--<item name="colorAccent">@color/textColorPrimary</item>-->
        <!--<item name="colorControlHighlight">@color/textColorPrimary</item>-->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText" />


    <style name="AppTheme.Well">
        <item name="android:background">@drawable/well_dark_bg</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TextAppearance.Design.Error.MyError">
        <item name="android:layout_marginTop">@dimen/top_margin</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FloatingButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@color/textColorPrimary</item>
        <item name="backgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.Well.ListItem">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/well_color_text</item>
        <item name="android:padding">@dimen/list_item_padding</item>
    </style>


    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">@dimen/title_padding</item>
    </style>

    <style name="AppTheme.PageLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Paragraph">
        <item name="android:layout_margin">@dimen/list_item_padding</item>
    </style>

    <style name="AppTheme.Paragraph.Content">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Spinner">
        <item name="android:divider">@color/well_color_text</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="AppTheme.Dialog">
        <item name="android:tint">@color/textColorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="android:dropDownListViewStyle">@style/AppTheme.Spinner</item>
    </style>

    <style name="AppTheme.WellEditText">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@color/well_color_text</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/title_padding</item>
        <item name="android:paddingRight">@dimen/title_padding</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingBottom">@dimen/activity_margin</item>
    </style>

    <style name="AppTheme.SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/well_color_text</item>
        <item name="android:textSize">@dimen/dropdown_text_size</item>
        <item name="android:padding">@dimen/default_margin</item>
    </style>

    <style name="AppTheme.SpinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/well_color_text</item>
        <item name="android:textSize">@dimen/dropdown_text_size</item>
    </style>

    <style name="AppTheme.ButtonStyle.Floating">
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:layout_margin">12dp</item>
    </style>


</resources>
