<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.PaddingWithoutBottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.edu.amu.wmi.reval.task.page.TaskPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/AppTheme.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Well.ListItem">

            <ImageView
                android:id="@+id/task_icon"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/task_item_icon"
                android:src="@drawable/task_item_icon"
                android:tint="@color/icon_tint" />

            <LinearLayout
                android:id="@+id/task_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/task_icon"
                android:layout_toRightOf="@id/task_icon"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/AppTheme.Paragraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/AppTheme.PageLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subject" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/example_subject" />
                </LinearLayout>


                <LinearLayout
                    style="@style/AppTheme.Paragraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/AppTheme.PageLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/topic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/example_topic" />
                </LinearLayout>

                <LinearLayout
                    style="@style/AppTheme.Paragraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/AppTheme.PageLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/last_activity" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/example_date" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_content_wrapper"
                style="@style/AppTheme.Paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_wrapper"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.PageLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/task_content" />


                <TextView
                    style="@style/AppTheme.Paragraph.Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/example_content" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>