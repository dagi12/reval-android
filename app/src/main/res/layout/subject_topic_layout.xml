<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/AppTheme.Well.ListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/well_padding">

        <ImageView
            android:id="@+id/subject_task_icon"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/task_item_icon"
            android:src="@drawable/task_item_icon"
            android:tint="@color/icon_tint" />

        <TextView
            android:id="@+id/subject_text_view"
            style="@style/AppTheme.PageLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/page_label_margin"
            android:layout_toEndOf="@id/subject_task_icon"
            android:layout_toRightOf="@id/subject_task_icon"
            android:text="@string/subject" />

        <Spinner
            android:id="@+id/subject_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinner_height"
            android:layout_below="@id/subject_text_view"
            android:divider="@color/icon_tint"
            android:dividerHeight="7dp" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/AppTheme.Well.ListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/well_padding">

        <ImageView
            android:id="@+id/topic_task_icon"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/task_item_icon"
            android:src="@drawable/task_item_icon"
            android:tint="@color/icon_tint" />

        <TextView
            android:id="@+id/topic_text_view"
            style="@style/AppTheme.PageLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/page_label_margin"
            android:layout_toEndOf="@id/topic_task_icon"
            android:layout_toRightOf="@id/topic_task_icon"
            android:text="@string/topic" />

        <Spinner
            android:id="@+id/topic_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinner_height"
            android:layout_below="@id/topic_text_view" />

    </RelativeLayout>


</LinearLayout>